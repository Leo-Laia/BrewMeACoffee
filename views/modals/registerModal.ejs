<!-- views/modals/registerModal.ejs -->
<div
  class="modal fade"
  id="registerModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="registerModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/register" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="registerModalLabel">Registrar</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Fechar"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="nome">Nome</label>
            <input
              type="text"
              class="form-control"
              id="nome"
              name="nome"
              required
            />
          </div>
          <div class="form-group">
            <label for="telefone">Telefone</label>
            <input
              type="text"
              class="form-control"
              id="telefone"
              name="telefone"
            />
          </div>
          <div class="form-group">
            <label for="emailRegister">Email</label>
            <input
              type="email"
              class="form-control"
              id="emailRegister"
              name="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="senhaRegister">Senha</label>
            <input
              type="password"
              class="form-control"
              id="senhaRegister"
              name="senha"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>
